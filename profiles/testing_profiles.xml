<?xml version="1.0" encoding="UTF-8"?>
<media-profiles>
	<audio-profile id="lame-mp3">
		<name>MP3</name>
		<name xml:lang="pt_BR">MP3</name>
		<description>A proprietary and older, but also popular, lossy audio format that produces larger files at lower bitrates.</description>
		<description xml:lang="pt_BR">Um formato de áudio proprietário e mais antigo, mas também popular e com poucas perdas que produz arquivos maiores com taxas de bits mais baixas.</description>
		
		<output-file-extension>mp3</output-file-extension>
		
		<element-needed>lame</element-needed>
		
		<mimetype>audio/mp3</mimetype>
		<mimetype>audio/mpeg3</mimetype>
		<pipeline>
			<process>
				<element id="audioconvert" type="required" />
				<element id="lame" type="required">
					<property id="bitrate" type="optional" />
					<property id="vbr" type="optional" />
						<!--<if expression="vbr!=0" />--> <!-- vbr!=0 need to use html encoded chars -->
				</element>
				<if expression="vbr != 0">
					<element id="xingmux" type="optional" />
					<element id="id3v2mux" type="optional" />
				</if>
				<if expression="exist(id3v2mux)">
					<element id="id3v2mux" type="optional" />
				</if>
				<elif expression="exist(id3mux)">
					<element id="id3mux type="/>
				</elif>
				<!--audioconvert ! lame +bitrate+ +quality+ ! +xingmux+ ! +id3v2mux+ ! +id3mux-->
			</process>
			<variable id="vbr_mode">
				<name>VBR Mode</name>
				<name xml:lang="pt_BR">Modo VBR</name>
				<control-type>combo</control-type>
				<default-value>0</default-value>
				<possible-values>
					<value value="0" enables="bitrate" disables="vbr_quality">Constant Bitrate</value>
					<value xml:lang="pt_BR" value="0" enables="bitrate" disables="vbr_quality">Taxa de Bits Constante</value>
					<value value="4" enables="vbr_quality" disables="bitrate">Variable Bitrate</value>
					<value xml:lang="pt_BR" value="4" enables="vbr_quality" disables="bitrate">Taxa Variável de Bits</value>
					<value value="3" enables="vbr_quality" disables="bitrate">Average Bitrate</value>
					<value xml:lang="pt_BR" value="3" enables="vbr_quality" disables="bitrate">Taxa Média de Bits</value>
				</possible-values>
			</variable>
			<variable id="vbr_quality">
				<name>VBR Quality</name>
				<name xml:lang="pt_BR">Qualidade VBR</name>
				<control-type>slider</control-type>
				<min-value>0</min-value>
				<min-label>Worst</min-label>
				<min-label xml:lang="pt_BR">Pior</min-label>
				<max-value>9</max-value>
				<max-label>Best</max-label>
				<max-label xml:lang="pt_BR">Melhor</max-label>
				<step-value>1</step-value>
				<default-value>5</default-value>
			</variable>
			<variable id="bitrate">
				<name>Bitrate</name>
				<name xml:lang="pt_BR">Taxa de bits</name>
				<control-type>combo</control-type>
				<default-value>128</default-value>
				<possible-values>
					<value value="64">64 Kbps</value>
					<value value="96">96 Kbps</value>
					<value value="128">128 Kbps</value>
					<value value="160">160 Kbps</value>
					<value value="192">192 Kbps</value>
					<value value="320">320 Kbps</value>
				</possible-values>
			</variable>
		</pipeline>
	</audio-profile>
    
	<video-profile>
		<name>XviD (MPEG-4 ISO format)</name>
		<description>A video profile</description>
		
		<output-file-extension>avi</output-file-extension>
		<plugin-needed>xvid</plugin-needed>
		
		<mimetype>video/mpeg4</mimetype>
		
		<pipeline>
			<process>
			</process>
		</pipeline>
	
	</video-profile>
</media-profiles>
